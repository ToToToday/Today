                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <div class="input-group w-50 border-secondary border rounded d-none">
                        <input type="text" class="form-control border-0" placeholder="輸入目的地、景點、體驗行程或活動名稱…" aria-label="Recipient's username" aria-describedby="search">
                        <button class="btn" type="button" id="search"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                    <ul class="navbar-nav my-2 my-lg-0">
                        <!-- 手機 -->
                        <li class="nav-item d-sm-block d-lg-none m-2">
                            <a class="nav-link text-secondary text-opacity-75 fs-6" href="#">
                                <i class="fa-solid fa-right-to-bracket fs-6 me-2"></i>
                                登入
                            </a>
                        </li>
                        <li class="nav-item d-sm-block d-lg-none border-bottom m-2 pb-3">
                            <a class="nav-link text-secondary text-opacity-75 fs-6" href="#">
                                <i class="fa-solid fa-user fs-6 me-2"></i>
                                註冊
                            </a>
                        </li>
                        <li class="nav-item d-sm-block d-lg-none m-2">
                            <a class="nav-link text-secondary text-opacity-75 fs-6" href="#">
                                <i class="fa-regular fa-circle-question fs-6 me-2"></i>
                                常見問題與幫助
                            </a>
                        </li>
                        <!-- 筆電 -->
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link text-secondary text-opacity-75" href="#">
                                <i class="fa-solid fa-cart-shopping fs-6"></i>
                            </a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link text-secondary text-opacity-75 fs-6" href="#">登入/註冊</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @*<div class="container">
